<div class="tab_areas tab-{{section.id}}">  
  <ul class="uk-tab-bottom" uk-tab>
    {% for i in (1..3) %}
      {% assign tabs_key = "tab_label_" | append: i %}
      {% assign label = block.settings[tabs_key] %}
      {% if label %}
        <li><a href="#">{{ label }}</a></li>
      {% endif %}
    {% endfor %}
  </ul>

  <ul class="uk-switcher uk-margin">
    {% for i in (1..3) %}
      {% assign tabs_key = "tab_label_" | append: i %}
      {% assign text_key = "tab_text_" | append: i %}
      {% assign label = block.settings[tabs_key] %}
      {% assign text = block.settings[text_key] %}
      {% if label %}
        <li>
          {% if forloop.index == 3 and text == blank %}
            <div id="judgeme_product_reviews" class="jdgm-widget jdgm-review-widget" data-id="{{ product.id }}" data-auto-install="false"></div>
          {% else %}
            {{ text }}
          {% endif %}
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

{% stylesheet %}
  .custom-tab{
    width: 100%;
  }
  .tab_areas .uk-tab li * {
      text-transform: capitalize;
      font-size: clamp(14px, 3vw, 16px);
  }
  .tab_areas .uk-tab-bottom>*>a {
    border-width: 4px;
  }
  .tab_areas .uk-tab>.uk-active>a {
    color: var(--color, var(--color-primary));
    border-color: var(--color, var(--color-primary));
    font-weight: 700;
  }
{% endstylesheet %}

